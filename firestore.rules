rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if false;
      match /messages/{message} {
    
        allow  write: 
            if request.resource.data.size() > 0
            && request.resource.data.size() < 1000
            && request.resource.data.email.size() > 0
            && request.resource.data.email.size() < 151
            && request.resource.data.name.size() > 0
            && request.resource.data.name.size() < 151
            && request.resource.data.msg.size() > 0
            && request.resource.data.msg.size() < 501
      }
    }
  }
}